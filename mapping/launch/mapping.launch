<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <arg name="namespace" default="/"/>
  <arg name="public_sim"   default="true"/>
  
  <arg name="world"  default="small_office_inventory"/>
  <arg name="gzpose" default="-x 0.0 -y 0.0 -z 0.0 -R 0.0 -P 0.0 -Y 0.0"/>

  <arg name="planner"        default="base"/>
  <arg name="global_planner" default="global_planner"/>
  <arg name="local_planner"  default="$(eval 'teb' if arg('public_sim') else 'pal')"/>
  <arg name="mapping"        default="$(eval 'gmapping' if arg('public_sim') else 'karto')"/>

  <arg name="rviz"     default="true"/>
  <arg name="gzclient" default="true"/>
  <arg name="recording" default="false"/>
  <arg name="extra_gazebo_args" default=""/>

  <arg name="rgbd_sensors"   default="false"/>

  <arg name="sim_sufix" value="_public_sim"     if="$(arg public_sim)"/>
  <arg name="sim_sufix" value=""                unless="$(arg public_sim)"/>

  <arg name=""/>

  <arg name="map_only" default="true"/>
  <arg name="sim_variant" default="0"/>

  <env name="PAL_HOST" value="tiago" />

  <group ns="$(arg namespace)">

  <!-- simulation, pointcloud to laserscan-->
  <include file="$(find my_simulation)/launch/my_simulation.launch">
      <arg name="world"  value="$(arg world)"/>
      <arg name="multi" value=""/>
      <arg name="gzpose" value="$(arg gzpose)"/>
      <arg name="gui" value="$(arg gzclient)"/>
      <arg name="debug" value="false"/>
      <arg name="recording" value="$(arg recording)"/>
      <arg name="extra_gazebo_args" value="$(arg extra_gazebo_args)"/>
      <arg name="use_moveit_camera" value="false"/>
      <arg name="use_dynamic_footprint" value="false"/>
  
      <arg name="map_only" value="$(arg map_only)"/>
      <arg name="load_yaml_map" value="false"/>
      <arg name="sim_variant" value="$(arg sim_variant)"/>
  </include>

  <!-- mapping node-->
  <include file="$(find tiago_2dnav_gazebo)/launch/navigation.launch">
      <arg name="state"          value="mapping"/>
      <arg name="mapping"        value="$(arg mapping)"/>
      <arg name="planner"        value="$(arg planner)"/>
      <arg name="global_planner" value="$(arg global_planner)"/>
      <arg name="local_planner"  value="$(arg local_planner)"/>
      <arg name="public_sim"     value="$(arg public_sim)"/>
      <arg name="rgbd_sensors"   value="$(arg rgbd_sensors)"/>
      <arg name="config_base_path" value="$(find my_simulation)"/>
  </include>

  <node name="rviz" pkg="rviz" type="rviz" if="$(arg rviz)"
          args="-d $(find tiago_2dnav)/config/rviz/navigation$(arg sim_sufix).rviz"/>
  </group>

  <!-- frontier explorer-->
  <include file="$(find explore_lite)/launch/explore.launch"/>

</launch>
